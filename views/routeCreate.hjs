<!DOCTYPE html>
<html>
  <head>
    <title>Create Route</title>
    <link rel="stylesheet" href="/styles/bootstrap.min.css" />
    <link rel="stylesheet" href="/styles/style.css" />
    <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
  </head>
  <body>
    <div>
      <h2>Create Route</h2>
      <form action="/api/v1/route" method="POST">
        <div class="form-group">
          <label for="routeName">Route Name:</label>
          <input type="text" id="routeName" name="routename" class="form-control" required />
        </div>
        <div class="form-group">
          <label for="fromStation">From Station ID:</label>
          <input type="text" id="fromStation" name="fromStationid" class="form-control" required />
        </div>
        <div class="form-group">
          <label for="toStation">To Station ID:</label>
          <input type="text" id="toStation" name="toStationid" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
      </form>
    </div>
  </body>
</html>
